{
    "id": "io.supernova.documentation-main",
    "name": "Documentation",
    "description": "Default Supernova documentation exporter",
    "author": "Jiri Trecak",
    "organization": "Supernova",
    "source_dir": "src",
    "assets_dir": "assets",
    "version": "1.4.2",
    "config": {
        "sources": "sources.json",
        "output": "output.json",
        "js": "src/js_helpers.js"
    },
    "engines": {
        "pulsar": "1.0.0",
        "supernova": "1.0.0"
    },
    "type": "documentation",
    "tags": [
        "Documentation"
    ],
    "contributes": {
        "configuration": [
            {
                "key": "defaultVisualMode",
                "default": "dark",
                "type": "enum",
                "values": [
                    "light",
                    "dark"
                ],
                "label": "Default design theme",
                "description": "Base theme configuration for the entire design system documentation. Can be additionally overriden with separate values.",
                "category": "Design"
            },
            {
                "key": "showVisualModeSwitch",
                "default": true,
                "type": "boolean",
                "label": "Dark/Light mode switch",
                "description": "Allow users to switch from light to dark documentation using menu item",
                "category": "Design"
            }
        ],
        "blocks": [
            {
                "key": "com.supernova.block.embed-storybook",
                "title": "Embed Storybook",
                "category": "Media Blocks",
                "description": "Embed Storybook content",
                "icon": "icons/blocks/storybook.png",
                "mode": "block",
                "properties": [
                    {
                        "key": "url",
                        "default": "",
                        "label": "Storybook URL",
                        "type": "string"
                    }
                ]
            }
        ]
    }
}